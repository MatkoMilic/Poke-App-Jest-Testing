{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "resolveJsonModule": true,
    "types": ["@types/jest"]
  },
  "exclude": [
    "node_modules",
    "babel.config.ts",
    "metro.config.ts",
    "<rootDir>/jest.config.ts"
  ]
}
